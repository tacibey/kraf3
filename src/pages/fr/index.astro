---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";

// --- GEÇİCİ DÜZELTME: İngilizce veri dosyalarını import et ---
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
// --- GEÇİCİ DÜZELTME SONU ---

// Görsel ve partner importları
import heroImage from "@images/hero-image.avif";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

// Avatar URL'leri
const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];

// Sayfa Başlığı (Fransızca)
const pageTitle: string = "Kraffe Roasters | Machines à Torréfier Industrielles et Commerciales";
---

{/* DİLİ BELİRT: lang="fr" */}
<MainLayout lang="fr" title={pageTitle}>
  <AnnouncementBanner
    title="Contactez-nous sur Whatsapp !"
    btnId="dismiss-button-fr"
    btnTitle="Contacter sur Whatsapp"
    url="https://wa.link/ycj4x5"
  />

  <HeroSection
    title=`Maîtrisez l'Art de la Torréfaction : <span class="text-orange-500 dark:text-orange-400">Machines Industrielles Kraffe</span>`
    subTitle="Débloquez une constance de saveur exceptionnelle et une efficacité opérationnelle avec les torréfacteurs commerciaux Kraffe, conçus par des experts. Fabriqués pour la durabilité, conçus pour la précision, soutenus par une assistance à vie."
    primaryBtn="Découvrez Nos Machines"
    primaryBtnURL="/fr/products" {/* URL DÜZGÜN */}
    secondaryBtn="Demander une Consultation"
    secondaryBtnURL="/fr/contact" {/* URL DÜZGÜN */}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Approuvé par les <span class="font-bold">Torréfacteurs</span> du Monde Entier`
    src={heroImage}
    alt="Vue détaillée d'une machine à torréfier Kraffe"
  />

  <ClientsSection
    title="Le Choix des Principaux Torréfacteurs & Cafés"
    subTitle="Rejoignez les entreprises qui atteignent l'excellence en torréfaction avec Kraffe."
    partners={partnersData}
  />

  {/* Özellikler şimdilik İngilizce JSON'dan gelecek */}
  <FeaturesGeneral
    title="Conçu pour l'Excellence en Torréfaction"
    subTitle="Chaque torréfacteur Kraffe est méticuleusement conçu pour un contrôle, une constance et une efficacité inégalés, vous permettant de libérer tout le potentiel de chaque grain."
    src={featureImage}
    alt="Gros plan des composants du torréfacteur Kraffe"
    features={features} {/* İngilizce veriyi kullanacak */}
  />

  <FeaturesNavs
    title=`Libérez la Performance Maximale : <span class="text-orange-500 dark:text-orange-400">À l'Intérieur du Torréfacteur Kraffe</span>`
    tabs={[
      {
        heading: "Contrôle Thermique Avancé",
        content: "Maîtrisez le transfert de chaleur avec nos tambours à double paroi, une isolation supérieure et des plaques avant robustes en fonte.",
        svg: "tools",
        src: tools,
        alt: "Détail du tambour du torréfacteur Kraffe",
        first: true,
      },
      {
        heading: "Système de Torréfaction de Précision",
        content: "Réglez la perfection. Les brûleurs pré-mélangés modulés, le débit d'air variable et la vitesse de tambour réglable vous donnent un contrôle ultime sur le profil de torréfaction.",
        svg: "dashboard",
        src: dashboard,
        alt: "Gros plan du panneau de contrôle du torréfacteur Kraffe",
        second: true,
      },
      {
        heading: "Intégration Intelligente à la Torréfaction",
        content: "Rationalisez votre flux de travail. Nos machines s'intègrent parfaitement à Cropster et Artisan, complétées par notre logiciel gratuit de répétition de profil.",
        svg: "house",
        src: construction,
        alt: "Torréfacteur Kraffe intégré dans un café",
      },
    ]}
  />

  <TestimonialsSection
    title="Approuvé par les Torréfacteurs Professionnels"
    subTitle="Découvrez pourquoi les principales torréfactions choisissent Kraffe pour la qualité, la constance et le support."
    testimonials={[
      {
        content: "La machine est incroyablement conviviale et donne des résultats constants à chaque fois. Le processus de torréfaction est efficace et précis, me permettant d'obtenir la torréfaction parfaite pour mes grains de café.",
        author: "Amir Montezar",
        role: "Etude Coffee Co.",
        avatarSrc: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      { count: "100%", description: "Assurance Qualité : Contrôle qualité rigoureux sur chaque machine avant expédition." },
      { count: "Sur Mesure", description: "Orienté Solution : Approche de conception flexible pour répondre à vos besoins spécifiques de torréfaction." },
      { count: "Global", description: "Durabilité : Maintenance facile avec des composants de marques mondialement reconnues." },
      { count: "7/24", description: "Support à Vie : Support dédié à vie de notre équipe axée sur les solutions." },
    ]}
  />

  {/* Fiyatlandırma şimdilik İngilizce JSON'dan gelecek */}
  <PricingSection pricing={pricing} /> {/* İngilizce veriyi kullanacak */}

  {/* SSS şimdilik İngilizce JSON'dan gelecek */}
  <FAQ title="Questions<br />Fréquemment Posées" faqs={faqs} /> {/* İngilizce veriyi kullanacak */}

  <HeroSectionAlt
    title="Prêt à Perfectionner Votre Torréfaction ?"
    subTitle="Contactez nos experts dès aujourd'hui pour discuter de vos besoins et découvrir la solution Kraffe idéale pour votre entreprise."
    url="/fr/contact" {/* URL DÜZGÜN */}
  />
</MainLayout>
